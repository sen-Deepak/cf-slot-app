{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "vanilla",
  "env": [
    "N8N_WEBHOOK_URL",
    "APP_KEY",
    "AUTH_API_URL"
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/(.*\\.html?)$",
      "dest": "/public/$1"
    },
    {
      "src": "/.*",
      "dest": "/public/login.html"
    }
  ]
}
