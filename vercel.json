{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": null,
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/(.*\\.html?)$",
      "dest": "/public/$1"
    },
    {
      "src": "/.*",
      "dest": "/public/login.html"
    }
  ]
}
